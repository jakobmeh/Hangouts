generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//
// ────────────────────────────────────────────
// USER
// ────────────────────────────────────────────
//
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String

  // Groups
  ownedGroups Group[]
  memberships GroupMember[]

  // Events
  createdEvents Event[]
  attending     Attendee[]

  createdAt DateTime @default(now())
}

//
// ────────────────────────────────────────────
// GROUP
// ────────────────────────────────────────────
//
model Group {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  city        String
  country     String?

  // Owner
  ownerId Int
  owner   User @relation(fields: [ownerId], references: [id])

  // Relations
  members GroupMember[]
  events  Event[]

  createdAt DateTime @default(now())
}

//
// ────────────────────────────────────────────
// GROUP MEMBER (User ↔ Group)
// ────────────────────────────────────────────
//
model GroupMember {
  id      Int @id @default(autoincrement())

  userId  Int
  groupId Int

  user  User  @relation(fields: [userId], references: [id])
  group Group @relation(fields: [groupId], references: [id])

  @@unique([userId, groupId])
}

//
// ────────────────────────────────────────────
// EVENT
// ────────────────────────────────────────────
//
model Event {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  date        DateTime

  // Location
  city        String
  country     String
  countryCode String?

  // Optional
  imageUrl    String?
  category    String?
  capacity    Int?

  // Creator
  userId Int
  user   User @relation(fields: [userId], references: [id])

  // Group (optional!)
  groupId Int?
  group   Group? @relation(fields: [groupId], references: [id])

  // Attendees
  attendees Attendee[]

  createdAt DateTime @default(now())
}

//
// ────────────────────────────────────────────
// ATTENDEE (User ↔ Event)
// ────────────────────────────────────────────
//
model Attendee {
  id      Int @id @default(autoincrement())

  userId  Int
  eventId Int

  user  User  @relation(fields: [userId], references: [id])
  event Event @relation(fields: [eventId], references: [id])

  @@unique([userId, eventId])
}
