// USER
// â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
//
model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  name      String?
  image     String?   // ðŸ‘ˆ PROFILKA (URL)
  password  String
  isAdmin   Boolean @default(false)

 accounts  Account[]
  sessions  Session[]
  
  // Groups
  ownedGroups Group[]
  memberships GroupMember[]

  // Events
  createdEvents Event[]
  attending     Attendee[]

  groupMessages GroupMessage[] 

  createdAt DateTime @default(now())
}

//
// â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
// GROUP
// â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
//
model Group {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  city        String
  country     String?

  // Owner
  ownerId Int
  owner   User @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  // Relations
  members GroupMember[]
  events  Event[]

 messages GroupMessage[] 
 
  createdAt DateTime @default(now())
}

//
// â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
// GROUP MEMBER (User â†” Group)
// â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
//
model GroupMember {
  id      Int @id @default(autoincrement())

  userId  Int
  groupId Int

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([userId, groupId])
}

//
// â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
// EVENT
// â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
//
model Event {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  date        DateTime

  city        String
  country     String
  countryCode String?

  imageUrl    String?
  category    String?
  capacity    Int?

  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  // ðŸ”´ ZDAJ OBVEZNO
  groupId Int
  group   Group @relation(fields: [groupId], references: [id], onDelete: Cascade)

  attendees Attendee[]

  createdAt DateTime @default(now())
}

