generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//
// ────────────────────────────────────────────
// USER
// ────────────────────────────────────────────
// Registered user that can create groups, events, and join them
//
model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  name      String?
  password  String

  // Relations
  ownedGroups Group[]        // groups this user owns
  groupMember GroupMember[]  // groups this user joined

  createdEvents Event[]      // events created by user
  attending     Attendee[]   // events user joined
}

//
// ────────────────────────────────────────────
// GROUP
// ────────────────────────────────────────────
// Meetup-style group (e.g. "React Ljubljana")
//
model Group {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  city        String
  country     String?

  // Owner
  ownerId Int
  owner   User @relation(fields: [ownerId], references: [id])

  // Relations
  members GroupMember[]
  events  Event[]

  createdAt DateTime @default(now())
}

//
// ────────────────────────────────────────────
// GROUP MEMBER
// ────────────────────────────────────────────
// Join table: User ↔ Group
//
model GroupMember {
  id      Int @id @default(autoincrement())

  userId  Int
  groupId Int

  user  User  @relation(fields: [userId], references: [id])
  group Group @relation(fields: [groupId], references: [id])

  @@unique([userId, groupId]) // user can join group only once
}

//
// ────────────────────────────────────────────
// EVENT
// ────────────────────────────────────────────
// Event that belongs to a group
//
model Event {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  date        DateTime

  // Location
  city        String
  country     String
  countryCode String?

  // Optional
  imageUrl    String?
  category    String?
  capacity    Int?

  // Creator
  userId Int
  user   User @relation(fields: [userId], references: [id])

  // Group
  groupId Int
  group   Group @relation(fields: [groupId], references: [id])

  // Attendees
  attendees Attendee[]
}

//
// ────────────────────────────────────────────
// ATTENDEE
// ────────────────────────────────────────────
// Join table: User ↔ Event
//
model Attendee {
  id      Int @id @default(autoincrement())

  userId  Int
  eventId Int

  user  User  @relation(fields: [userId], references: [id])
  event Event @relation(fields: [eventId], references: [id])

  @@unique([userId, eventId]) // user can join event only once
}
